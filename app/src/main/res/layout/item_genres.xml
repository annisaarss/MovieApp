<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dimen_20dp"
    android:layout_marginEnd="@dimen/dimen_5dp"
    android:background="@color/black_100"
    android:orientation="horizontal">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvGenreMovie"
        style="@style/Detail1TextStyle"
        android:text="@string/sample_title"
        app:layout_constraintStart_toEndOf="@+id/imgMovie"
        app:layout_constraintTop_toTopOf="@+id/imgMovie" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgOval"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_width="@dimen/dimen_5dp"
        android:layout_height="@dimen/dimen_5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_oval" />
</LinearLayout>