<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_100"
    android:fitsSystemWindows="true"
    tools:context=".presentation.detail.DetailActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/black_100"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_563dp"
                app:layout_collapseMode="parallax">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_563dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_photo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_174dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/black_40">
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Title1TextStyle"
                        android:text="@string/sample_title"
                        android:maxWidth="@dimen/dimen_375dp"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_14dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_title_movie"
                        style="@style/Title1TextStyle"
                        android:text="@string/sample_title"
                        android:maxWidth="@dimen/dimen_375dp"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_14dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_duration_movie"
                        style="@style/Detail1TextStyle"
                        android:text="@string/sample_duration"
                        android:maxWidth="@dimen/dimen_375dp"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_movie"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_hd_movie"
                        style="@style/Detail3TextStyle"
                        android:text="@string/hd"
                        android:maxWidth="@dimen/dimen_375dp"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        app:layout_constraintTop_toTopOf="@id/tv_duration_movie"
                        app:layout_constraintStart_toEndOf="@id/tv_duration_movie"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_genre_movie"
                        style="@style/Detail1TextStyle"
                        android:text="@string/sample_genre"
                        android:maxWidth="@dimen/dimen_375dp"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_duration_movie"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/dimen_20dp"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_genre_movie">
                        <com.google.android.material.button.MaterialButton
                            style="@style/WatchButtonStyle"
                            android:text="@string/watch_trailer"
                            android:layout_gravity="start"/>
                        <com.google.android.material.button.MaterialButton
                            style="@style/FavoriteButtonStyle"
                            android:text="@string/btn_favorite"
                            android:layout_gravity="end"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- The attribute app:layout_collapseMode="pin" is set so that
                 sticks to the top when the user scrolls the view up-->
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/sample_title"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:contentDescription="this is button back"
                    />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!--Now add the NestedScollView-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_100"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginHorizontal="@dimen/dimen_20dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_description_movie"
                style="@style/Detail2TextStyle"
                android:text="@string/sample_desc"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cast"
                style="@style/Heading2TextStyle"
                android:text="@string/cast"
                android:layout_marginTop="@dimen/dimen_20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>