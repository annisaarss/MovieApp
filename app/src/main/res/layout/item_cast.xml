<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_90dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_cast"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90dp"
        android:src="@drawable/sample_photo"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name_cast"
        android:layout_width="match_parent"
        android:maxLines="2"
        android:layout_marginTop="@dimen/dimen_15dp"
        style="@style/Detail1TextStyle"
        app:layout_constraintStart_toStartOf="@id/img_cast"
        app:layout_constraintEnd_toEndOf="@id/img_cast"
        app:layout_constraintTop_toBottomOf="@id/img_cast"/>
</androidx.constraintlayout.widget.ConstraintLayout>